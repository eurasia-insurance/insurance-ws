<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.lapsa.maven.pom</groupId>
		<artifactId>javaee7-app-parent</artifactId>
		<version>3.0-SNAPSHOT</version>
	</parent>

	<groupId>tech.lapsa.eurasia36</groupId>
	<artifactId>eurasia36-ws</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>Eurasia36 Lib : Web-servics</name>

	<properties>
		<!-- oldy -->
		<insurance-lib.version>2.3-SNAPSHOT</insurance-lib.version>
		<mail-lib.version>2.0-SNAPSHOT</mail-lib.version>
		<!-- tech -->
		<insurance-calculation.version>1.0-SNAPSHOT</insurance-calculation.version>
		<lapsa-jersey-extensions.version>1.0-SNAPSHOT</lapsa-jersey-extensions.version>
		<lapsa-hibernate-validation.version>1.0-SNAPSHOT</lapsa-hibernate-validation.version>
		<!-- FACADES -->
		<insurance-facade.version>1.0-SNAPSHOT</insurance-facade.version>
		<epayment-facade.version>1.0-SNAPSHOT</epayment-facade.version>
		<!-- Glassfish -->
		<gf-embeded.jersey.version>2.10.4</gf-embeded.jersey.version>
		<jackson-databind.version>2.6.3</jackson-databind.version>
		<!-- external -->
		<hibernate-validator.version>5.1.3.Final</hibernate-validator.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- oldy -->
			<dependency>
				<groupId>com.lapsa.insurance-lib</groupId>
				<artifactId>insurance-security</artifactId>
				<version>${insurance-lib.version}</version>
			</dependency>
			<dependency>
				<groupId>com.lapsa.mail-lib</groupId>
				<artifactId>mail-lib-api</artifactId>
				<version>${mail-lib.version}</version>
			</dependency>
			<dependency>
				<groupId>com.lapsa.mail-lib</groupId>
				<artifactId>mail-lib-impl</artifactId>
				<version>${mail-lib.version}</version>
			</dependency>
			<!-- tech -->
			<dependency>
				<groupId>tech.lapsa.insurance</groupId>
				<artifactId>insurance-calculation</artifactId>
				<version>${insurance-calculation.version}</version>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.lapsa</groupId>
				<artifactId>lapsa-jersey-extensions</artifactId>
				<version>${lapsa-jersey-extensions.version}</version>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.lapsa</groupId>
				<artifactId>lapsa-hibernate-validation</artifactId>
				<version>${lapsa-hibernate-validation.version}</version>
			</dependency>
			<!-- FACADES -->
			<dependency>
				<groupId>tech.lapsa.insurance</groupId>
				<artifactId>insurance-facade</artifactId>
				<version>${insurance-facade.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.epayment</groupId>
				<artifactId>epayment-facade</artifactId>
				<version>${epayment-facade.version}</version>
				<type>ejb</type>
			</dependency>
			<!-- Glassfish -->
			<dependency>
				<groupId>org.glassfish.jersey.media</groupId>
				<artifactId>jersey-media-json-jackson</artifactId>
				<version>${gf-embeded.jersey.version}</version>
			</dependency>
			<dependency>
				<groupId>org.glassfish.jersey.core</groupId>
				<artifactId>jersey-server</artifactId>
				<version>${gf-embeded.jersey.version}</version>
			</dependency>
			<dependency>
				<groupId>com.fasterxml.jackson.core</groupId>
				<artifactId>jackson-databind</artifactId>
				<version>${jackson-databind.version}</version>
			</dependency>
			<!-- test -->
			<dependency>
				<groupId>org.hibernate</groupId>
				<artifactId>hibernate-validator</artifactId>
				<version>${hibernate-validator.version}</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<!-- oldy -->
		<dependency>
			<groupId>com.lapsa.insurance-lib</groupId>
			<artifactId>insurance-security</artifactId>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>com.lapsa.mail-lib</groupId>
			<artifactId>mail-lib-api</artifactId>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>com.lapsa.mail-lib</groupId>
			<artifactId>mail-lib-impl</artifactId>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<!-- tech -->
		<dependency>
			<groupId>tech.lapsa.insurance</groupId>
			<artifactId>insurance-calculation</artifactId>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>tech.lapsa.lapsa</groupId>
			<artifactId>lapsa-jersey-extensions</artifactId>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>tech.lapsa.lapsa</groupId>
			<artifactId>lapsa-hibernate-validation</artifactId>
			<scope>runtime</scope>
			<optional>false</optional>
		</dependency>
		<!-- FACADES -->
		<dependency>
			<groupId>tech.lapsa.insurance</groupId>
			<artifactId>insurance-facade</artifactId>
			<type>ejb</type>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<dependency>
			<groupId>tech.lapsa.epayment</groupId>
			<artifactId>epayment-facade</artifactId>
			<type>ejb</type>
			<scope>compile</scope>
			<optional>false</optional>
		</dependency>
		<!-- Glassfish -->
		<dependency>
			<groupId>org.glassfish.jersey.media</groupId>
			<artifactId>jersey-media-json-jackson</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.core</groupId>
			<artifactId>jersey-server</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<scope>provided</scope>
		</dependency>
		<!-- JavaEE -->
		<dependency>
			<groupId>javax.enterprise</groupId>
			<artifactId>cdi-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.ws.rs</groupId>
			<artifactId>javax.ws.rs-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.ejb</groupId>
			<artifactId>javax.ejb-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.validation</groupId>
			<artifactId>validation-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sun.mail</groupId>
			<artifactId>javax.mail</artifactId>
			<scope>provided</scope>
		</dependency>
		<!-- test -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-all</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-validator</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/version.properties</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/version.properties</exclude>
				</excludes>
			</resource>
		</resources>
	</build>

	<scm>
		<connection>scm:git:https://gitlab.lapsa.tech/lapsa/eurasia36/ws.git</connection>
		<developerConnection>scm:git:https://gitlab.lapsa.tech/lapsa/eurasia36/ws.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<issueManagement>
		<system>gitlab</system>
		<url>https://gitlab.lapsa.tech/lapsa/eurasia36/ws/issues</url>
	</issueManagement>


</project>